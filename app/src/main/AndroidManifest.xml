<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:usesCleartextTraffic="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:name=".MarbellaApp"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppMarbella"
        tools:targetApi="31">
        <activity
            android:name=".ui.reportes.ReporteStock"
            android:exported="false" />
        <activity
            android:name=".ui.reportes.ReporteSalidas"
            android:exported="false" />
        <activity
            android:name=".ui.reportes.ReporteEntradas"
            android:exported="false" />
        <activity
            android:name=".ui.entradasalida.RegistrarSalida"
            android:exported="false" />
        <activity
            android:name=".ui.entradasalida.RegistrarEntrada"
            android:exported="false" />
        <activity
            android:name=".ui.marca.RegistroMarca"
            android:exported="false" />
        <activity
            android:name=".ui.usuario.RegistroUsuario"
            android:exported="false" />
        <activity
            android:name=".ui.proveedor.RegistroProveedor"
            android:exported="false" />
        <activity
            android:name=".ui.producto.RegistroProducto"
            android:exported="false" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="true"
            android:label="@string/title_activity_login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppMarbella.NoActionBar" />


    </application>

</manifest>