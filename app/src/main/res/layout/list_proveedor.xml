<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp"
    android:background="@drawable/border"
    android:id="@+id/lyListaProveedor"
    android:textAlignment="center">

    <TextView
        android:id="@+id/lblNombreProv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="Proveedor"
        android:textSize="12sp" />
    <TextView
        android:id="@+id/lblDireccion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="Direccion"
        android:textSize="12sp" />
    <TextView
        android:id="@+id/lblTelefProv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="TelÃ©fono"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/lblCorreoProv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="Correo"
        android:textSize="12sp" />
    <TextView
        android:id="@+id/lblRepresentante"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="Representante"
        android:textSize="12sp" />

</LinearLayout>