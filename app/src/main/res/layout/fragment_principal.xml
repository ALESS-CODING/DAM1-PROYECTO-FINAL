<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context=".ui.principal.PrincipalFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="244dp"
                android:src="@mipmap/ic_banner_foreground" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnRegistrarEntrada"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:text="REGISTRAR ENTRADA"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnRegistrarSalida"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:text="REGISTRAR SALIDA"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:translationY="10dp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>